/* pages/articledetail/articledetail.wxss */
page{
  background-color: #f5f5f5;
}

.articleinfo{
  position: fixed;
  top: 0rpx;
  height: calc(100% - 110rpx);
  width: 100%;
  overflow: auto;
}
.head{
  background-color: white;
}
.readnum_time{
  display: flex;
  align-items: center;
  margin-top: 42rpx;
}

.writetime{
  flex: 1;
  color: #999999;
  font-size: 24rpx;
  text-align: left;
}

.readnum{
  color: #999;
  font-size: 24rpx;
  text-align: right;
  display: flex;
  align-items: center;
}
.readnuming{
  width: 36rpx;
  height: 36rpx;
}

/* 文章内容 */
.articleContent{
  background-color: white;
  padding: 10rpx;
}

.articletxt{
  color: #333;
  font-size: 30rpx;
  text-indent: 50rpx;
}

.articletxt text{
  word-break: break-all;
}
/* 文章内容中的图片 */
.articleimg{
  width: 80%;
  margin-left: 10%;
}

.comment{
  margin-top: 20rpx;
  /* border: 1rpx solid black; */
}
