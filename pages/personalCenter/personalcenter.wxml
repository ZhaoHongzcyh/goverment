<!--pages/personalCenter/personalcenter.wxml-->
<view class="personal">
  <view class="userinfo">
    <view class="userphoto">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view  class="username">
      <open-data type="userNickName"></open-data>
    </view>
  </view>

  <!-- other -->
  <view>
    <view class="singlelist" bindtap="myconnection">
      <image src="./img/my_connection.png" class="titleimg"></image>
      <view>我的收藏</view>
      <view class="narow">
        <image src="./img/arrow.png" class="arow"></image>
      </view>
    </view>

    <view class="singlelist" bindtap="aboutus">
      <image src="./img/about_us.png" class="titleimg"></image>
      <view>关于我们</view>
      <view class="narow">
        <image src="./img/arrow.png" class="arow"></image>
      </view>
    </view>

    <view class="singlelist" bindtap="makeprogramal">
      <image src="./img/make.png" class="titleimg"></image>
      <view>我也要做个小程序</view>
      <view class="narow">
        <image src="./img/arrow.png" class="arow"></image>
      </view>
    </view>
  </view>
</view>
