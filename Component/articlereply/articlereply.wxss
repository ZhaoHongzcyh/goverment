/* Component/articlereply/articlereply.wxss */
/* 底部 */
.footer{
  position: fixed;
  display: flex;
  align-items: center;
  bottom: 0rpx;
  height: 104rpx;
  width: 100%;
  background-color: white;
}
.footerselect{
  position: relative;
  text-align: center;
  margin-left: 30rpx;
}
.footerimg{
  width: 40rpx;
  height: 40rpx;
}

.footertxt{
  color: #999999;
  font-size: 24rpx;
}
.reply{
  flex: 5;
  width: 300rpx;
  height: 70rpx;
  margin-left: 40rpx;
  margin-right: 24rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
  border: 1rpx solid #C2C2C2;
}

.input{
  height: 100%;
}

.inputplc{
  font-size: 26rpx;
}
.sharebtn{
  position: absolute;
  top: 0rpx;
  height: 100%;
  width: 100%;
  opacity: 0;
  border: 1rpx solid red;
}